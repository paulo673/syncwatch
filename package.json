{
  "name": "syncwatch",
  "version": "1.0.0",
  "description": "Browser extension to watch videos in sync (like Teleparty)",
  "private": true,
  "workspaces": [
    "server",
    "extension"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:extension": "npm run dev --workspace=extension",
    "build:server": "npm run build --workspace=server",
    "build:extension": "npm run build --workspace=extension",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:extension\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
